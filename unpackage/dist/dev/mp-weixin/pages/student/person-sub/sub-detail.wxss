.sub-detail .sub-detail-header {
  padding: 30rpx 20rpx;
  background: #dee7c4;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.sub-detail .sub-detail-header .header-left {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
}
.sub-detail .sub-detail-header .header-left .image {
      width: 100%;
      height: 100%;
      border-radius: 30%;
}
.sub-detail .sub-detail-header .header-left .avatar {
      margin-top: 20rpx;
      width: 100%;
      height: 100%;
      border-radius: 50%;
      color: #fff;
      line-height: 140rpx;
      text-align: center;
      overflow: hidden;
      font-size: 1.0rem;
}
.sub-detail .sub-detail-header .header-right {
    margin-left: 20rpx;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
}
.sub-detail .sub-detail-header .header-item .label {
    font-size: 0.9rem;
    font-weight: 200;
    color: #000;
}
.sub-detail .sub-detail-header .header-item .name1 {
    font-size: 1.2rem;
    font-weight: bold;
}
.sub-detail .sub-detail-header .header-item .name {
    font-size: 0.9rem;
    font-weight: 500;
}
.sub-detail .sub-detail-title {
  background: #333333;
  color: #fff;
  padding: 30rpx;
}
.sub-detail .sub-detail-time {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding: 20rpx;
  border-bottom: solid #ccc 3rpx;
}
.sub-detail .sub-detail-time .time-btn {
    margin-left: 10rpx;
}
.sub-detail .sub-detail-time .time-btn button {
      width: 200rpx;
      font-size: 36rpx;
      padding: 10rpx 40rpx;
}
.sub-detail .sub-detail-time .time-btn .hs {
      background: #999;
}
.sub-detail .sub-detail-time .time-btn .ls {
      background: #37b0e9;
