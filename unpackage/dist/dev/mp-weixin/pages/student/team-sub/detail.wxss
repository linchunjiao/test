.team-sub-detail .detail-item {
  padding: 20rpx;
}
.team-sub-detail .detail-item .detail-item-label {
    font-size: 1rem;
    font-weight: bold;
}
.team-sub-detail .detail-item .detail-item-label .icon-label {
      border: solid #007AFF 6rpx;
      margin-right: 10rpx;
      display: inline-block;
      height: 30rpx;
      position: relative;
      top: 6rpx;
}
.team-sub-detail .detail-item .detail-item-content {
    padding-top: 20rpx;
    color: #333;
    font-size: 0.9rem;
    word-break: break-all;
}
.team-sub-detail .detail-item .detail-item-content .image {
      width: 100%;
      height: 300rpx;
      margin-top: 20rpx;
}
