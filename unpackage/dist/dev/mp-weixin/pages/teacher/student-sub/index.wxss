.student-sub-day {
  height: 100%;
  position: relative;
}
.student-sub-day .times-container {
    position: fixed;
    width: 100%;
    z-index: 1000;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-justify-content: space-around;
            justify-content: space-around;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    padding-bottom: 15rpx;
    border-bottom: solid #ccc 4rpx;
    background: #fff;
}
.student-sub-day .times-container .time-item {
      padding: 10rpx 30rpx;
}
.student-sub-day .times-container .time-item.active {
        background: #4CD964;
        color: #fff;
}
.student-sub-day .times-container .time-item .time {
        font-size: 0.8rem;
        text-align: center;
}
.student-sub-day .times-container .time-item .week {
        font-size: 0.8rem;
        margin-top: 10rpx;
        text-align: center;
}
.student-sub-day .studet-list {
    position: absolute;
    top: 120rpx;
    width: 100%;
    background: #fafafa;
}
.student-sub-day .studet-list .student-list-item {
      background: #fff;
      margin-top: 20rpx;
}
.student-sub-day .studet-list .student-list-item .student-item {
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        padding: 40rpx 40rpx 20rpx 40rpx;
        -webkit-box-align: center;
        -webkit-align-items: center;
                align-items: center;
        background: #fff;
        margin-top: 30rpx;
}
.student-sub-day .studet-list .student-list-item .student-item:first-child {
          margin-top: 0rpx;
}
.student-sub-day .studet-list .student-list-item .student-item .item-left {
          width: 140rpx;
          height: 140rpx;
          border-radius: 50%;
}
.student-sub-day .studet-list .student-list-item .student-item .item-left .image {
            width: 100%;
            height: 100%;
            border-radius: 50%;
}
.student-sub-day .studet-list .student-list-item .student-item .item-left .avatar {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            color: #fff;
            line-height: 70px;
            text-align: center;
            overflow: hidden;
            font-size: 2rem;
}
.student-sub-day .studet-list .student-list-item .student-item .item-right {
          -webkit-box-flex: 1;
          -webkit-flex: 1;
                  flex: 1;
          margin-left: 20rpx;
}
.student-sub-day .studet-list .student-list-item .student-item .item-right .name .header {
            font-size: 1rem;
            font-weight: bold;
}
.student-sub-day .studet-list .student-list-item .student-item .item-right .name .title {
            font-size: 0.9rem;
            font-weight: 500;
            color: #666;
            margin-left: 40rpx;
}
.student-sub-day .studet-list .student-list-item .student-item .item-right .sub-time {
            margin-top: 15rpx;
}
.student-sub-day .studet-list .student-list-item .student-item .item-right .sub-time .label {
              color: #C0C0C0;
}
.student-sub-day .studet-list .student-list-item .student-item .item-right .other {
            margin-top: 15rpx;
}

