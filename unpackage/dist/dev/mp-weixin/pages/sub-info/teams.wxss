.team-sub {
  background: #F0F4F3;
}
.team-sub .user-base-info {
    background: #00A68A;
    color: #fff;
    height: 56px;
    text-align: center;
    font-size: 20px;
}
.team-sub .user-base-info .base-info-content {
      line-height: 56px;
}
.team-sub .team-sub-item {
    padding: 40rpx 40rpx 20rpx 40rpx;
    background: #fafafa;
    height: 100%;
    margin-top: 20rpx;
}
.team-sub .team-sub-item:first-child {
      margin-top: 0rpx;
}
.team-sub .team-sub-item .team-sub-image {
      width: 100%;
      height: 300rpx;
}
.team-sub .team-sub-item .team-sub-image .image {
        width: 100%;
        height: 100%;
}
.team-sub .team-sub-item .team-sub-content .active-name {
      margin-top: 10rpx;
      font-weight: bold;
}
.team-sub .team-sub-item .team-sub-content .label {
      color: #666;
      font-weight: bold;
}
.team-sub .team-sub-item .team-sub-content .name {
      margin-left: 20rpx;
}
.team-sub .team-sub-item .team-sub-content .active-content {
      padding: 10rpx 0rpx 10rpx 0rpx;
      font-size: 0.9rem;
      color: #666;
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      line-height: 50rpx;
      height: 88rpx;
      -webkit-line-clamp: 2;
      /* autoprefixer: off */
      -webkit-box-orient: vertical;
      /* autoprefixer: on */
}
.team-sub .team-sub-item .team-sub-content .active-address {
      font-size: 0.9rem;
      padding: 10rpx 0rpx;
}
.team-sub .team-sub-item .team-sub-content .active-other {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      -webkit-box-pack: justify;
      -webkit-justify-content: space-between;
              justify-content: space-between;
}
.team-sub .team-sub-item .team-sub-content .active-other .active-time {
        color: #666;
        font-size: 0.9rem;
        -webkit-box-flex: 1;
        -webkit-flex: 1;
                flex: 1;
}
.team-sub .team-sub-item .team-sub-content .active-other .active-btn {
        padding-top: 8rpx;
        padding-bottom: 8rpx;
}

